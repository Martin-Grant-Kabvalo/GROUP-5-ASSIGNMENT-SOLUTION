<div id="editModal" class="modal">
    <div class="modal-content">
        <h2>Edit Module</h2>
        <label for="editModuleCode">Module Code:</label>
        <input type="text" id="editModuleCode" name="editModuleCode" readonly>
        <br>
        <label for="editModuleName">Module Name:</label>
        <input type="text" id="editModuleName" name="editModuleName">
        <br>
        <div class="button-container">
            <button id="updateModule">Update</button>
            <button id="discardEdit">Discard</button>
        </div>
    </div>
</div>


<div id="deleteModal" class="modal">
    <div class="modal-content">
        <p class="message" id="deleteMessage">Your message goes here.</p>
        <button class="modal-button" id="confirmDelete">Confirm</button>
        <button class="modal-button" id="cancelDelete">Cancel</button>
      </div>
</div>
<div class="title-bar">
    <h1>Modules</h1>
</div>
<div class="page-content">
    <div class="left-section">
        <div class="section-title">Add Module</div>
        <form id="addModuleForm">
            <div class="form-group">
                <label for="moduleCode">Module Code:</label>
                <input type="text" id="moduleCode" name="moduleCode" required>
            </div>
            <div class="form-group">
                <label for="moduleName">Module Name:</label>
                <input type="text" id="moduleName" name="moduleName" required>
            </div>
            <div class="form-group">
                <button type="submit" id="addModuleButton">
                    <i class="fas fa-plus"></i> Add Module
                </button>
            </div>
        </form>
    </div>
    <div class="right-section">
        <div class="section-title">Modules List</div>
        <table>
            <thead>
                <tr>
                    <th>Module Code</th>
                    <th>Module Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="moduleList">
            </tbody>
        </table>
    </div>
</div>

<script src="js/modules.js"></script>

